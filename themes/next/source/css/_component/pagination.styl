.pagination {
  margin: 120px 0 40px;
  text-align: center;
  border-top: 1px solid $colorGainsboro;
}

.page-number-basic {
  display: inline-block;
  position: relative;
  top: -1px;
  margin: 0 10px;
  padding: 0 10px;
  line-height: 30px;
}

.pagination {
  .prev, .next, .page-number {
    @extend .page-number-basic;
    border-bottom: 0;
    border-top: 1px solid $colorGainsboro;
    transition-property: border-color;
    the-transition();

    &:hover {
      border-top-color: $colorDeepBlack;
    }
  }

  .space {
    @extend .page-number-basic;
  }

  .page-number.current {
    color: white;
    background: $colorDeepBlack;
    border-top-color: $colorDeepBlack;
  }
}

@media (max-width: 767px)
  .pagination {
    text-align: left;
    border-top: none;
  }
  .pagination {
    .prev, .next, .page-number {
      margin-bottom: 10px;
      border-top: 0;
      border-bottom: 1px solid $colorGainsboro;

      &:hover {
        border-bottom-color: $colorDeepBlack;
      }
    }
  }


.blockquote-center {
  position: relative;
  margin: 40px 0;
  padding: 0;
  border-left: none;
  text-align: center;

  &::before, &::after {
    position: absolute;
    content: ' ';
    display: block;
    width: 100%;
    height: 24px;
    opacity: 0.2;
    background: url($blockquoteCenterIcon) no-repeat;
    background-position: 0 -7px;
    background-size: 24px 24px;
  }
  &::before {
    top: -20px;
    border-top: 1px solid $colorLightGray;
  }
  &::after {
    bottom: -20px;
    border-bottom: 1px solid $colorLightGray;
    background-position: 100% 7px;
  }

  p, div {
    text-align: center
  }
}
